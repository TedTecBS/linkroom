# Linkroom Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Get these from Firebase Console → Project Settings → General → Your apps → Web app
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ============================================
# PAYSTACK CONFIGURATION
# ============================================
# Get from Paystack Dashboard → Settings → API Keys & Webhooks
# Use test keys for development, live keys for production
VITE_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx

# ============================================
# MAPBOX CONFIGURATION
# ============================================
# Get from Mapbox Dashboard → Access tokens
VITE_MAPBOX_TOKEN=your_mapbox_token

# ============================================
# ENVIRONMENT
# ============================================
VITE_ENV=development

# ============================================
# OPTIONAL: FIREBASE EMULATORS
# ============================================
# Uncomment to use Firebase emulators for local development
# VITE_USE_FIREBASE_EMULATOR=true
